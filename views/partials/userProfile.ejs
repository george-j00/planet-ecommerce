<div id="profile" class="contents">
    <h1 class="d-flex justify-content-center">My Account</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form id="profileForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= userData.name %>" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= userData.email %>" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= userData.phone %>"
                               pattern="[0-9]{10}" title="Please enter a 10-digit phone number" required>
                    </div>
                     <input type="hidden" id="userId" name="userId" value="<%= userData._id %>">

                    <button type="submit" class="btn btn-dark">Update Profile</button>
                </form>
            </div>
        </div>
    </div>

    <!-- <%= userData.phone %> -->
</div>


<script src="../js/profileForm.js"></script>