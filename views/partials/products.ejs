<div class="container-fluid">
    <div class="row">

        <% products.forEach((product, index) => { %>
            <div class="col-md-4 col-sm-6 col-12 mb-4">
                <a href="/products/<%= product._id %>" class="text-decoration-none text-dark ">
                  <div class="card">
                    <img class="card-img-top" style="height: 50vh;" src="<%= product.productImage %>" alt="Card image cap">
                    <div class="card-body d-flex justify-content-between flex-column">
                      <div>
                        <h6 class="card-title text-xl"><%= product.productTitle %></h6>
                        <p class="text-secondary">$ <%= product.productPrice %> <span class="text-muted"><strike>$150</strike></span></p>
                      </div>
                      <button class="btn btn-dark mt-auto">Add To Cart</button>
                    </div>
                  </div>
                </a>
              </div>
              
        <% }); %>



    </div>
</div>



