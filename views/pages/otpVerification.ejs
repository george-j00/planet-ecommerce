<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header');%>

<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
  }
</style>

<body>
  <form action="/otp-verification" method="POST" class="w-75 p-5 mb-5 bg-light text-dark rounded" style="max-width: 450px;">
    <!-- Email input -->
    <h2 class="d-flex justify-content-center fw-bold" style="font-family: 'Poppins', sans-serif; font-size: 2rem; line-height: 2.75394rem; letter-spacing: -0.08813rem;">
      Verify OTP
    </h2>
    <div class="d-flex flex-row">
      <input class="form-control form-control-lg m-2 text-center border-primary" name="otp1" type="text" placeholder="_" />
      <input class="form-control form-control-lg m-2 text-center border-primary" name="otp2" type="text" placeholder="_" />
      <input class="form-control form-control-lg m-2 text-center border-primary" name="otp3" type="text" placeholder="_" />
      <input class="form-control form-control-lg m-2 text-center border-primary" name="otp4" type="text" placeholder="_" />
    </div>
    <p class="mt-3 text-secondary" id="timer"></p>
    <div class="d-flex justify-content-center">
      <button class="btn btn-dark text-light">Verify Email</button>
    </div>
  </form>
</body>



<!-- Include JavaScript -->
<script>
  // Function to update the timer countdown
  function updateTimer(seconds) {
    document.getElementById('timer').innerHTML = `Time left: ${seconds} seconds`;
  }

  // Function to start the timer
  function startTimer(durationInSeconds) {
    let secondsRemaining = durationInSeconds;
    updateTimer(secondsRemaining);

    const timerInterval = setInterval(() => {
      secondsRemaining--;

      if (secondsRemaining >= 0) {
        updateTimer(secondsRemaining);
      } else {
        clearInterval(timerInterval);
        document.getElementById('timer').innerHTML = 'Time Expired!';
        
        window.location.href = "/signup";
      }
    }, 1000); // Update every second (1000 milliseconds)
  }

  // Start the timer when the page loads
  startTimer(60); // Set the timer to 60 seconds
</script>

</html>
