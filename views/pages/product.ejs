<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../style/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <title>Product</title>
</head>
<body>
    <%- include('../partials/navbar');%>
    
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="col-md-6 mt-5">
                    
                    <div id="productCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" style="width: 25vw; height: 60vh;">
                            <% product.productImages.forEach((image, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <% if (product.offers && product.offers.length > 0) { %>
                                        <div class="tag bg-info text-light position-absolute" style="top: 10px; left: 10px;">
                                            Offer - <%= product.offers[0].discountPercentage %>% off
                                        </div>
                                    <% } %>
                                    <img class="d-block w-100 card-img-top" style="width: 50vw; height: 55vh;" src="<%= image.secure_url %>" alt="View Product" data-toggle="modal" data-target="#imageModal">
                                </div>
                            <% }); %>
                        </div>
                        <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-5">
                <div class="d-flex flex-column justify-content-between h-100">
                    <div>
                        <h2 class="mb-3"><%= product.productTitle %></h2>
                        <p class="mb-3"> <%= product.productDescription %></p>
                        <h3 class="mb-3">$ <%= product.productPrice %></h3>
                       <span class="text-secondary"> <p>Category :  <%= product.category %></p></span>
                       <div class="mb-3">
                        <label for="quantity" class="mb-2 d-block">Quantity:</label>
                        <div class="input-group mt-3">
                            <button class="btn btn-outline-dark" type="button"  id="decrementButton">-</button>
                            <input type="number" class="form-control" product-data-id="<%= product._id %>" id="quantityInput" min="1" value="1" step="1">
                            <button class="btn btn-outline-dark" type="button" id="incrementButton">+</button>
                        </div>
                    </div>
                        <button class="btn btn-dark w-100" id="addToCartBtnId">Add to Cart</button>
                        <div id="addedToCartDiv" class="hidden pt-3 text-success float-animation"><strong>Added to cart</strong></div>

                    </div>
                </div>
            </div>
            
        </div>
        <div class="row mt-5">
            <div class="col-md-3">
                <h3>Description</h3>
            </div>
            <div class="col-md-9">
                <p class="text-justify"><%= product.productDescription %></p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <h6 class="text-secondary">Additional Information</h6>
            </div>
            <div class="col-md-9">
                <p class="text-justify"><%= product.additionalInformation %></p>
            </div>
        </div>

        

    </div>

    <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-body">
                    <!-- Zoomed image here -->
                    <img src="<%= product.productImages[0].secure_url %>" alt="Zoomed Image" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    

    <%- include('../partials/footer');%>

    <script>

document.addEventListener('DOMContentLoaded', () =>{
const incrementButton = document.getElementById('incrementButton');
const decrementButton = document.getElementById('decrementButton');
const quantityInput = document.getElementById('quantityInput');
let currentQuantity = parseInt(quantityInput.value);
const addedToCartDiv = document.getElementById('addedToCartDiv');


const decreaseButtons = document.querySelectorAll('.decreaseQty');
  const increaseButtons = document.querySelectorAll('.increaseQty');
  const quantityElements = document.querySelectorAll('.quantity');



incrementButton.addEventListener('click', () => {
  currentQuantity++;
  quantityInput.value = currentQuantity;
});

decrementButton.addEventListener('click', () => {
  if (currentQuantity > 1) {
    currentQuantity--;
    quantityInput.value = currentQuantity;
  }
});
const addToCartBtn = document.getElementById('addToCartBtnId');

addToCartBtn.addEventListener('click', () => {
  let quantity = currentQuantity;
  let productId = quantityInput.getAttribute('product-data-id');

  fetch('/add-to-cart', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ productId, quantity }),
  })
    .then(response => response.json())
    .then(data => {
      // Handle the response as needed
      console.log('Added successfully');
       // Remove the "hidden" class to show the <div> when the response indicates success
    addedToCartDiv.classList.remove('hidden');

     // Use setTimeout to add the "show" class after a delay
     setTimeout(() => {
      addedToCartDiv.classList.add('show');
    }, 100);
    
    setTimeout(() => {
      addedToCartDiv.style.display = 'none';
    }, 2000);

// You can also hide the <div> after a certain duration if desired
setTimeout(() => {
  addedToCartDiv.style.display = 'none';
}, 5000); 
    })
    .catch(error => {
      console.error('Error adding to cart:', error);
    });
});
});

    </script>

    <!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Bootstrap JavaScript -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>



</body>

<!-- <script src="../js/cart.js"></script> -->
</html>
